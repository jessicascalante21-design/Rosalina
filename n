    <script type="text/babel">
        const { useState, useEffect, useRef } = React;

        // --- 1. QUIZ DE DIAGNÓSTICO (Adaptado a tus nuevos estándares) ---
        const QuizModule = ({ onComplete }) => {
            const [currentQuestion, setCurrentQuestion] = useState(0);
            const [showFeedback, setShowFeedback] = useState(false);
            const [isCorrect, setIsCorrect] = useState(false);
            const [score, setScore] = useState(0);

            const questions = [
                {
                    q: "Tienes un 'CRUCE' (uno sale, otro entra). ¿Qué limpias PRIMERO?",
                    options: [
                        { text: "La cama, para que se vea lista rápido", correct: false },
                        { text: "El baño, por eficiencia y desinfección", correct: true },
                        { text: "Barrer el piso", correct: false }
                    ],
                    explanation: "En un CRUCE (20-25 min), la prioridad es sacar ropa sucia y atacar el BAÑO primero por eficiencia."
                },
                {
                    q: "Vas a hacer un REPASO RÁPIDO (estaba vacía, hoy entra alguien). ¿Cuánto tiempo tienes?",
                    options: [
                        { text: "10 a 15 minutos", correct: true },
                        { text: "30 minutos", correct: false },
                        { text: "Lo que me tome revisar todo", correct: false }
                    ],
                    explanation: "El estándar es 10-15 min. Objetivo: Que parezca NUEVA (Ventilar, Olor, Polvo, Luces)."
                },
                {
                    q: "Estás en Ocean Park. ¿Qué es CRÍTICO revisar por la humedad?",
                    options: [
                        { text: "El microondas", correct: false },
                        { text: "Que el A/C drene bien y no huela", correct: true },
                        { text: "Las persianas", correct: false }
                    ],
                    explanation: "En Ocean Park, el A/C y el OLOR son control estricto debido a la alta rotación y zonas externas húmedas."
                }
            ];

            const handleAnswer = (isAnsCorrect) => {
                setIsCorrect(isAnsCorrect);
                if (isAnsCorrect) setScore(score + 1);
                setShowFeedback(true);
            };

            const nextQ = () => {
                if (currentQuestion < questions.length - 1) {
                    setCurrentQuestion(currentQuestion + 1);
                    setShowFeedback(false);
                } else {
                    onComplete(score);
                }
            };

            const q = questions[currentQuestion];

            return (
                <div className="max-w-2xl mx-auto p-6 bg-white rounded-xl shadow-lg fade-in mt-10">
                    <h2 className="text-2xl font-bold text-blue-900 mb-2">Evaluación de Estándares</h2>
                    <div className="w-full bg-gray-200 rounded-full h-2.5 mb-6">
                        <div className="bg-blue-600 h-2.5 rounded-full" style={{ width: `${((currentQuestion + 1) / questions.length) * 100}%` }}></div>
                    </div>

                    {!showFeedback ? (
                        <>
                            <h3 className="text-xl font-semibold mb-6">{q.q}</h3>
                            <div className="space-y-3">
                                {q.options.map((opt, idx) => (
                                    <button 
                                        key={idx}
                                        onClick={() => handleAnswer(opt.correct)}
                                        className="w-full text-left p-4 rounded-lg border-2 border-gray-100 hover:border-blue-500 hover:bg-blue-50 transition flex justify-between items-center group"
                                    >
                                        {opt.text}
                                        <i className="ph ph-caret-right opacity-0 group-hover:opacity-100"></i>
                                    </button>
                                ))}
                            </div>
                        </>
                    ) : (
                        <div className={`p-6 rounded-lg text-center ${isCorrect ? 'bg-green-50 border border-green-200' : 'bg-red-50 border border-red-200'}`}>
                            <div className="mb-4">
                                {isCorrect ? (
                                    <i className="ph ph-check-circle text-5xl text-green-500"></i>
                                ) : (
                                    <i className="ph ph-x-circle text-5xl text-red-500"></i>
                                )}
                            </div>
                            <h3 className={`text-xl font-bold mb-2 ${isCorrect ? 'text-green-800' : 'text-red-800'}`}>
                                {isCorrect ? "¡Correcto!" : "Revisa el estándar:"}
                            </h3>
                            <p className="text-gray-700 mb-6 font-medium">{q.explanation}</p>
                            <button onClick={nextQ} className="bg-blue-900 text-white px-8 py-2 rounded-full hover:bg-blue-800 shadow-lg">
                                {currentQuestion < questions.length - 1 ? "Siguiente Pregunta" : "Ver Resultados"}
                            </button>
                        </div>
                    )}
                </div>
            );
        };

        // --- 2. MANUAL DE PROCESOS (Interactiva con Tabs) ---
        const ProcessStandard = () => {
            const [activeTab, setActiveTab] = useState('repaso');

            const protocols = {
                repaso: {
                    title: "Repaso Rápido",
                    time: "10–15 min",
                    target: "Refrescar y asegurar primera impresión impecable.",
                    context: "Habitaciones vacantes que recibirán huésped HOY.",
                    icon: "ph-lightning",
                    color: "bg-yellow-100 text-yellow-800 border-yellow-300",
                    steps: [
                        "Aire A/C encendido 5 min (Ventilar).",
