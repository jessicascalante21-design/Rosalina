                            <div className="flex items-center gap-2"><i className="ph ph-check-circle text-red-500"></i> Drenajes lentos</div>
                            <div className="flex items-center gap-2"><i className="ph ph-check-circle text-red-500"></i> Olor extraño</div>
                            <div className="flex items-center gap-2"><i className="ph ph-check-circle text-red-500"></i> Fuga de agua</div>
                            <div className="flex items-center gap-2"><i className="ph ph-check-circle text-red-500"></i> Ropa/Muebles manchados</div>
                        </div>
                    </div>
                </div>
            );
        };

        // --- MAIN APP SHELL ---
        const App = () => {
            const [view, setView] = useState('welcome');

            const navItems = [
                { id: 'training', label: '1. Estándares y Tiempos', icon: 'ph-clock' },
                { id: 'report', label: '2. Lectura Reporte', icon: 'ph-file-text' },
                { id: 'protocols', label: '3. Reglas x Propiedad', icon: 'ph-buildings' }
            ];

            return (
                <div className="min-h-screen flex flex-col bg-slate-100">
                    <header className="bg-slate-900 text-white p-4 shadow-lg sticky top-0 z-50">
                        <div className="max-w-6xl mx-auto flex justify-between items-center">
                            <div className="flex items-center gap-2 cursor-pointer hover:opacity-80 transition" onClick={() => setView('welcome')}>
                                <i className="ph ph-broom text-2xl text-yellow-400"></i>
                                <div>
                                    <h1 className="font-bold text-sm md:text-lg leading-none">Housekeeping</h1>
                                    <p className="text-[10px] text-slate-400 uppercase tracking-widest">Training Module v3.0</p>
                                </div>
                            </div>
                            
                            {view !== 'welcome' && view !== 'quiz' && (
                                <nav className="flex gap-1 md:gap-3">
                                    {navItems.map(item => (
                                        <button 
                                            key={item.id}
                                            onClick={() => setView(item.id)}
                                            className={`flex items-center gap-1 px-3 py-2 rounded-lg text-xs md:text-sm font-medium transition ${view === item.id ? 'bg-yellow-500 text-slate-900 shadow-glow' : 'hover:bg-slate-800 text-slate-300'}`}
                                        >
                                            <i className={`ph ${item.icon} text-lg`}></i>
                                            <span className="hidden md:inline">{item.label}</span>
                                        </button>
                                    ))}
                                </nav>
                            )}
                        </div>
                    </header>

                    <main className="flex-1 max-w-6xl mx-auto w-full p-4 md:p-8">
                        
                        {view === 'welcome' && (
                            <div className="text-center py-12 fade-in">
                                <div className="bg-white p-8 md:p-12 rounded-3xl shadow-2xl max-w-2xl mx-auto border border-gray-100">
                                    <div className="bg-blue-50 w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-6 ring-4 ring-blue-100">
                                        <i className="ph ph-graduation-cap text-5xl text-blue-600"></i>
                                    </div>
                                    <h1 className="text-3xl md:text-4xl font-black text-slate-800 mb-4">Manual de Operaciones</h1>
                                    <p className="text-gray-500 mb-8 text-lg leading-relaxed">
                                        Bienvenida. Antes de ver el reporte, vamos a revisar los <strong>Estándares Oficiales</strong> de tiempos, checklists y prioridades.
                                    </p>
                                    <button 
                                        onClick={() => setView('quiz')}
                                        className="bg-blue-600 text-white text-lg font-bold px-10 py-4 rounded-full hover:bg-blue-700 shadow-xl transform hover:scale-105 transition flex items-center gap-3 mx-auto"
                                    >
                                        Comenzar Diagnóstico <i className="ph ph-arrow-right font-bold"></i>
                                    </button>
                                </div>
                            </div>
                        )}

                        {view === 'quiz' && (
                            <QuizModule onComplete={() => setTimeout(() => setView('training'), 1500)} />
                        )}

                        {view === 'training' && <ProcessStandard />}

                        {view === 'report' && (
                            <div className="space-y-6">
                                <div className="text-center mb-6">
                                    <h2 className="text-2xl font-bold text-slate-800">Lectura del Reporte Diario</h2>
                                    <p className="text-gray-500">Identifica las prioridades (Early, Late, Cruce) en el papel.</p>
                                </div>
                                <ReportReader />
                            </div>
                        )}

                        {view === 'protocols' && (
                            <div className="space-y-6">
                                <div className="text-center mb-6">
                                    <h2 className="text-2xl font-bold text-slate-800">Protocolos por Propiedad</h2>
                                    <p className="text-gray-500">Diferencias clave entre OP e IV + Reglas de Reporte.</p>
                                </div>
                                <PropertyProtocols />
                            </div>
                        )}

                    </main>

                    <footer className="bg-slate-200 text-center p-4 text-slate-500 text-xs font-medium uppercase tracking-wide">
                        &copy; 2024 Hotel Operations System
                    </footer>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>